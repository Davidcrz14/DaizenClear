<Window x:Class="MemoryCleaner.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="Configuración"
        Height="650"
        Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="Resources/icon.ico"
        Background="White">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header con icono -->
        <Grid Grid.Row="0" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="#1a1a1a"
                    CornerRadius="12"
                    Width="50"
                    Height="50"
                    Margin="0,0,15,0">
                <TextBlock Text="⚙️"
                           FontSize="24"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="Configuración"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#1a1a1a"/>
                <TextBlock Text="Personaliza el comportamiento de DaizenClear"
                           FontSize="14"
                           Foreground="#666666"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Settings -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Auto Clean Settings -->
                <Border Background="White"
                        CornerRadius="12"
                        Padding="20"
                        Margin="0,0,0,20"
                        BorderBrush="#e9ecef"
                        BorderThickness="1"
                        Effect="{ui:ThemeResource SystemControlElevationBorderBrush}">
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    Background="#007bff"
                                    CornerRadius="8"
                                    Width="36"
                                    Height="36"
                                    Margin="0,0,15,0">
                                <TextBlock Text="🔄"
                                           FontSize="18"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Limpieza Automática"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="#1a1a1a"/>
                                <TextBlock Text="Configura la limpieza automática de memoria"
                                           FontSize="13"
                                           Foreground="#666666"/>
                            </StackPanel>
                        </Grid>

                        <CheckBox x:Name="AutoCleanCheckBox"
                                  Content="Habilitar limpieza automática"
                                  FontWeight="Medium"
                                  FontSize="14"
                                  Margin="0,0,0,20"
                                  Foreground="#1a1a1a"
                                  Background="Transparent"/>

                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="Umbral de uso de memoria"
                                           FontWeight="Medium"
                                  FontSize="14"
                                  Foreground="#1a1a1a"/>
                                <TextBlock Text="Limpiar cuando el uso supere este porcentaje"
                                           FontSize="12"
                                           Foreground="#6c757d"
                                           Margin="0,3,0,0"/>
                            </StackPanel>

                            <Border Grid.Column="1"
                                    Background="#ffffff"
                                    CornerRadius="8"
                                    Padding="12,10"
                                    BorderBrush="#dee2e6"
                                    BorderThickness="2">
                                <TextBox x:Name="ThresholdTextBox"
                                         Text="75"
                                         Width="70"
                                         TextAlignment="Center"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         Foreground="#1a1a1a"
                                         FontWeight="Medium"
                                         FontSize="14"/>
                            </Border>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="Intervalo de limpieza"
                                           FontWeight="Medium"
                                  FontSize="14"
                                  Foreground="#1a1a1a"/>
                                <TextBlock Text="Tiempo entre limpiezas automáticas (minutos)"
                                           FontSize="12"
                                           Foreground="#6c757d"
                                           Margin="0,3,0,0"/>
                            </StackPanel>

                            <Border Grid.Column="1"
                                    Background="#ffffff"
                                    CornerRadius="8"
                                    Padding="12,10"
                                    BorderBrush="#dee2e6"
                                    BorderThickness="2">
                                <TextBox x:Name="IntervalTextBox"
                                         Text="30"
                                         Width="70"
                                         TextAlignment="Center"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         Foreground="#1a1a1a"
                                         FontWeight="Medium"
                                         FontSize="14"/>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                                <!-- Notifications -->
                <Border Background="White"
                        CornerRadius="12"
                        Padding="20"
                        Margin="0,0,0,20"
                        BorderBrush="#e9ecef"
                        BorderThickness="1"
                        Effect="{ui:ThemeResource SystemControlElevationBorderBrush}">
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    Background="#28a745"
                                    CornerRadius="8"
                                    Width="36"
                                    Height="36"
                                    Margin="0,0,15,0">
                                <TextBlock Text="🔔"
                                           FontSize="18"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Notificaciones"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="#1a1a1a"/>
                                <TextBlock Text="Configura las notificaciones del sistema"
                                           FontSize="13"
                                           Foreground="#666666"/>
                            </StackPanel>
                        </Grid>

                        <CheckBox x:Name="ShowNotificationsCheckBox"
                                  Content="Mostrar notificaciones después de limpiar"
                                  FontWeight="Medium"
                                  FontSize="14"
                                  IsChecked="True"
                                  Margin="0,0,0,15"
                                  Foreground="#1a1a1a"
                                  Background="Transparent">
                            <CheckBox.ContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="#1a1a1a" />
                                </DataTemplate>
                            </CheckBox.ContentTemplate>
                        </CheckBox>
                        <CheckBox x:Name="PlaySoundCheckBox"
                                  Content="Reproducir sonido al limpiar"
                                  FontWeight="Medium"
                                  FontSize="14"
                                  IsChecked="True"
                                  Foreground="#1a1a1a"
                                  Background="Transparent">
                            <CheckBox.ContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="#1a1a1a" />
                                </DataTemplate>
                            </CheckBox.ContentTemplate>
                        </CheckBox>
                    </StackPanel>
                </Border>

                <!-- Startup -->
                <Border Background="White"
                        CornerRadius="12"
                        Padding="20"
                        Margin="0,0,0,20"
                        BorderBrush="#e9ecef"
                        BorderThickness="1"
                        Effect="{ui:ThemeResource SystemControlElevationBorderBrush}">
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    Background="#fd7e14"
                                    CornerRadius="8"
                                    Width="36"
                                    Height="36"
                                    Margin="0,0,15,0">
                                <TextBlock Text="🚀"
                                           FontSize="18"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Inicio del Sistema"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="#1a1a1a"/>
                                <TextBlock Text="Configura el comportamiento al iniciar Windows"
                                           FontSize="13"
                                           Foreground="#666666"/>
                            </StackPanel>
                        </Grid>

                        <CheckBox x:Name="StartWithWindowsCheckBox"
                                  Content="Iniciar con Windows"
                                  FontWeight="Medium"
                                  FontSize="14"
                                  Margin="0,0,0,15"
                                  Foreground="#1a1a1a"
                                  Background="Transparent">
                            <CheckBox.ContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="#1a1a1a" />
                                </DataTemplate>
                            </CheckBox.ContentTemplate>
                        </CheckBox>
                        <CheckBox x:Name="StartMinimizedCheckBox"
                                  Content="Iniciar minimizado en la bandeja del sistema"
                                  FontWeight="Medium"
                                  FontSize="14"
                                  Foreground="#1a1a1a"
                                  Background="Transparent">
                            <CheckBox.ContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="#1a1a1a" />
                                </DataTemplate>
                            </CheckBox.ContentTemplate>
                        </CheckBox>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="0,25,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Cancelar"
                    Style="{StaticResource ModernButton}"
                    Background="#f8f9fa"
                    Foreground="#495057"
                    BorderBrush="#dee2e6"
                    BorderThickness="1"
                    Click="CancelButton_Click"
                    Margin="0,0,10,0"
                    Height="45"
                    FontWeight="Medium"
                    FontSize="14"/>

            <Button Grid.Column="1"
                    Content="Guardar Configuración"
                    Style="{StaticResource ModernButton}"
                    Background="#007bff"
                    Foreground="White"
                    Click="SaveButton_Click"
                    Height="45"
                    FontWeight="Medium"
                    FontSize="14"/>
        </Grid>
    </Grid>

</Window>
